    <body>

        @{
            var orderId = TempData["order_id"];
            var message = TempData["msg"];
        }

        @if (orderId != null && message != null)
        {
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    Swal.fire({
                        title: 'Success!',
                        html: '<b>@orderId</b><br>@message',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
                });
            </script>
        }

    </body>
    </html>

}

   

