    <div class="container mt-5 main-container">
        <!-- Contact Form -->
        <div class="form-container">
            <h2 class="mb-4">Place Your Order</h2>
            <p>Please fill out the form below to place your order.We will get back to you as soon as possible.</p>

            <form method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Name</label>
                    <input name="user_name" type="text" class="form-control" id="name" placeholder="Enter your name" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input name="user_email" type="email" class="form-control" id="email" placeholder="Enter your email" pattern="[a-z0-9._%+-]+[a-z0-9.-]+\.[a-z]{2,}$" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="phone">Phone Number</label>
                    <input name="user_number" type="tel" class="form-control" id="phone" placeholder="Enter your phone number" ern="\d{10}" title="Must be a 10-digit number" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="address">Pin code</label>
                    <input name="pincode" type="text" class="form-control" id="address" placeholder="Enter your pincode" ern="\d{5}" title="Must be a 5-digit number" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="phone">payment Mode</label>

                        <select name="paymentofmode">
                            <option hidden>select your payment of mode</option>
                            <option value="Visa">Visa</option>
                            <option value="Mastercard">Mastercard</option>
                            <option value="American Express">American Express</option>
                            <option value="UnionPay">UnionPay</option>
                        </select>

                    </div>
                <div class="form-group col-md-6">
                    <label for="routerModem">select your product</label>
                    <select name="product_id" class="form-control" id="routerModem">
                        <option hidden>Select your router/modem</option>
                        @foreach (var data in Model.products_deatils)
                        {
                            <option value="@data.Id">@data.Name</option>
                        }

                    </select>
                </div>
                </div>

              

                <div class="form-group">
                    <label for="order-details">address</label>
                    <textarea name="user_address" class="form-control" id="order-details" rows="4" placeholder="Enter the details of your order"></textarea>
                </div>
                <button type="submit "><a href="" class="theme-btn"><span>Submit</span></a></button>
            </form>
        </div>


