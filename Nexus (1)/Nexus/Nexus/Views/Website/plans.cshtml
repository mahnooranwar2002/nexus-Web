 <style>
    .input-group {
        box-shadow: 0 2px 5px#0e0d0d;
    }

    .btn-primary {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }

    #btnSubmit {
        background-color: #d6111eee;
        color: white;
    }

        #btnSubmit:hover {
            background-color: #d6111e;
            color: white;
        }

    .form-control:focus {
        border-color: #d6111e;
        box-shadow: none;
    }


    .btn:focus {
        outline: none;
        box-shadow: none;
    }

    .pcard {
        border: 2px solid#d6111e;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

        .pcard:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
        }

    .pheader {
        background-color: #d6111e;
        color: white;
        padding: 20px;
        font-size: 1.5em;
        text-align: center;
    }

    .pcontent {
        padding: 20px;
        text-align: center;
        background-color: #f8f9fa;
    }

    .pbtn {
        margin-top: 15px;
        background-color: #d6111e;
        color: white;
        border: none;
        padding: 10px 20px;
        font-size: 1em;
        transition: background-color 0.3s, transform 0.3s;
    }

    .heading {
        color: black; 
        font-size: 3rem; 
        font-weight: bold; 
        text-transform: uppercase; 
        /* text-shadow: 2px 2px 4px#d6111e;  */
        text-align: center; 
        margin-top: 30px; 
        margin-bottom: 10px; 
    }

    .underline {
        height: 4px; 
        background-color: #d6111e; 
        width: 60%; 
        margin: 0 auto; 
    }
       
</style>
<div class="breadcrumb-wrapper section-padding bg-cover" style="background-image: url('/assets/img/brand/breadcrumb (1).jpg');">
    <div class="container">
        <div class="page-heading">
            <h1 class="wow fadeInUp" data-wow-delay=".3s">our Plans</h1>
            <ul class="breadcrumb-items wow fadeInUp" data-wow-delay=".5s">
                <li>
                    <a href="@Url.Action("Index","website")">
                        Home
                    </a>
                </li>
                <li>
                    <i class="fal fa-minus"></i>
                </li>
                <li>
                   Connection Plans
                </li>
            </ul>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="heading">OUR CONNECTION PLAN</h2>
            <div class="underline"></div>
        </div>
    </div>
</div>

