@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>SweetAlert Example</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    </head>
    <body>

        @{
            var message = TempData["msg"];
            var orderId = TempData["order_id"];
        }

        @if (message != null)
        {
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    Swal.fire({
                        title: 'Success!',
                        html: '<h4>@message and @orderId</h4>',
                        icon: 'success',
                        confirmButtonText: 'OK'
                    });
                });
            </script>
        }

    </body>
    </html>

}
<div class="breadcrumb-wrapper section-padding bg-cover container-fluid" style="background-image: url('/assets/img/brand/breadcrumb (1).jpg');">
    <div class="container">
        <div class="page-heading">
            <h1 class="wow fadeInUp" data-wow-delay=".3s">Place Order</h1>
