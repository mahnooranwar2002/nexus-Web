@{
    var message = TempData["msg"];
}

@if (message != null)
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: 'Contact Us',
                html: '<h4>@message</h4>',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        });
    </script>
}

