@model Nexus.Models.mainmodel
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>user profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
 <style>
        .profile-card {
            max-width: 900px;
            margin: 50px auto;
            background-color: white;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            border-radius: 15px;
        }

            .profile-card h2 {
                color: #d6111e;
                text-align: center;
                margin-bottom: 20px;
                font-weight: bold;
            }

        .form-label {
            font-weight: bold;
            color: #333;
        }

        .btn-update {
            background-color: #d6111e;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

            .btn-update:hover {
                background-color: #d6111e;
                transform: translateY(-2px);
                color: white;
                font-weight: bold;
            }

        .form-control:focus {
            border-color: #d6111e;
            box-shadow: 0 0 5px rgba(255, 75, 92, 0.5);
        }

        .userbg-image {
            background-image: url('/img/updateuser.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
 </style>
</head>
<body>
    
    <div class="userbg-image">
    <div class="profile-card">
    <h2>Update Profile</h2>
    <form method="post">
        <input name="user_Id" value="@Model.userdata.user_Id" type="hidden">
        <input name="status_updates" value="@Model.userdata.status_updates" type="hidden">
        <input name="user_Status" value="@Model.userdata.user_Status" type="hidden">

        <div class="mb-3">
            <label for="user_Name" class="form-label">Name</label>
            <input name="user_Name" value="@Model.userdata.user_Name" type="text" class="form-control" id="user_Name" required>
        </div>

        <div class="mb-3">
            <label for="user_Email" class="form-label">Email</label>
            <input name="user_Email" value="@Model.userdata.user_Email" type="email" class="form-control" id="user_Email" required>
        </div>

        <div class="mb-3">
            <label for="user_password" class="form-label">Password</label>
            <input name="user_password" value="@Model.userdata.user_Password" type="password" class="form-control" id="user_password" required>
        </div>

        <button style="margin-bottom:20px;" type="submit" class="btn btn-update w-100">Update</button>

      
       <button class="btn btn-update w-100"><a style="color:white;text-decoration:none;" href="@Url.Action("index", "website")" class="theme-btn"><span>Back to Home</span></a></button>

            </form>
     
</div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>