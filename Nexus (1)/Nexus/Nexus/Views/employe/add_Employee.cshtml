@model Nexus.Models.mainmodel
@{
    Layout = "../shared/Dashboard_layout.cshtml";
}
@if (TempData["successfully"] != null)
{
    <div class="alert alert-success" role="alert">
        <h3>@TempData["successfully"]</h3>
    </div>
}
<style>
    .heading {
        color: black;
        font-size: 3rem;
        font-weight: bold;
        text-transform: uppercase;
        /* text-shadow: 2px 2px 4px#d6111e;  */
        text-align: center;
        margin-top: 30px;
        margin-bottom: 10px;
    }

    .underline {
        height: 4px;
        background-color: #d6111e;
        width: 60%;
        margin: 0 auto;
    }</style>
<div class="row">
    <div class="col-md-12">
        <div class="form-container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h2 class="heading">
                            Add Employee
                        </h2>
                        <div class="underline"></div>
                    </div>
                </div>
            </div>

            <form method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Name</label>
                        <input name="Name" type="text" class="form-control" id="name" placeholder="Enter name" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email">User name</label>
                        <input name="user_name" type="text" class="form-control" id="email" placeholder="Enter email" required>
                    </div>
                    @if (TempData["msg"] != null)
                    {
                        <p style="color:red">@TempData["msg"]<sup>*</sup></p>
                    }
                    <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input name="Email" type="email" class="form-control" id="email" placeholder="Enter email" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Phone</label>
                        <input name="Phone" type="text" class="form-control" id="name" placeholder="Enter phone" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email">Password</label>
                        <input name="User_password" type="text" class="form-control" id="email" placeholder="Enter password" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="name">Age</label>
                        <input name="age" type="text" class="form-control" id="name" placeholder="Enter age" required>
                    </div>
                    
                </div>
                
                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label for="department">Gender</label>
                        <select name="Gender" required class="form-control" id="department">
                            <option hidden>Select gender</option>

                            <option value="female">Female</option>
                            <option value="male">Male</option>

                        </select>
                    </div>
                </div>

                <div class="form-row">
                   
                    <div class="form-group col-md-6">
                        <label for="department">Designation</label>
                        <select name="Position_id" required class="form-control" id="department">
                            <option hidden>Select designation</option>
                            @foreach (var get_des in Model.positionList)
                            {
                                <option value="@get_des.Id">@get_des.Name</option>
                            }

                        </select>
                </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                           <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Address</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Address"></textarea>
                            </div>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-modern btn-danger">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
