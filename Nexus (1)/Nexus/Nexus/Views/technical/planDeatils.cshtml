@model Nexus.Models.mainmodel
@{
    Layout = Layout = "../shared/technicalDashboard_layout.cshtml";
}
<style>
    .heading {
        color: black;
        font-size: 3rem;
        font-weight: bold;
        text-transform: uppercase;
        /* text-shadow: 2px 2px 4px#d6111e;  */
        text-align: center;
        margin-top: 30px;
        margin-bottom: 10px;
    }

    .underline {
        height: 4px;
        background-color: #d6111e;
        width: 60%;
        margin: 0 auto;
    }</style>
<div class="container" style="height:85vh;">
    <div class="row">
        <div class="col-12 mb-4">
            <form class="form-inline" autocomplete="off">
                <div class="input-group">
                    <input type="text" name="txtsearch" class="form-control rounded-pill search-input" placeholder="Search plan by Name or Type..." aria-label="Search" aria-describedby="button-addon2">
                    <button class="btn btn-outline-danger rounded-pill search-btn" type="submit" id="button-addon2">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="content">
                <div class="container">
                 
                    <div class="row">
                        <div class="col-md-12">
                            <div class="content">
                                <div class="container">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col">
                                                <h2 class="heading">
                                                    connection plan  Record List

                                                </h2>
                                                <div class="underline"></div>
                                            </div>
                                        </div>
                                    </div>
                    <!-- Table to display employees -->
                    <div class="table-responsive">
                        <table id="employeeTable" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>

                                    <th>connection Type</th>
                                    <th>description</th>
                                    <th>charges</th>
                                    <th>status</th>


                                    <th style="text-align:center">Action</th> <!-- Action column for edit/delete buttons -->
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var plan_data in Model.plandetails)
                                {
                                    <tr>
                                        <th scope="row">@plan_data.Name</th>
                                        <th scope="row">@plan_data.Type</th>
                                        <th scope="row">@plan_data.Description</th>
                                        <th scope="row">$ @plan_data.Charges</th>

                                        <th scope="row">@plan_data.status_update</th>


                                        <td style="text-align:center;">

                                            <button class="btn btn-success p-2">
                                                <a href="@Url.Action("plans_status","technical",new{id=plan_data.Id})" style="color:white">Status</a>
                                            </button>
                                            <button class="btn btn-danger p-2">
                                              <a style="color:white" href="@Url.Action("delete_plan","technical",new{id=plan_data.Id})">Delete</a>
                                            </button>
                                            <button class="btn btn-primary p-2">
                                                <a href="@Url.Action("plans_updates","technical",new{id=plan_data.Id})" style="color:white">Update</a>
                                            </button>
                                            
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                        @if (TempData["error"] != null)
                        {
                            <h4 style="color:red;text-align:center;">@TempData["error"]</h4>
                        }
                    </div>
                </div>
            </div>
            <div />
        </div>
    </div>
</div>


