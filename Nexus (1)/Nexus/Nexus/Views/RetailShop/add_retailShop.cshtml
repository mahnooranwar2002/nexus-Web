                        <input name="City" type="text" class="form-control" id="email" placeholder="Enter City" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="jobTitle">Area</label>
                        <input name="Area" type="text" class="form-control" id="password" placeholder="Enter Area" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="jobTitle">Contact</label>
                        <input name="Contact" type="text" class="form-control" id="password" placeholder="Enter Contact" required>
                    </div>

                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-modern btn-danger">Add new store</button>
