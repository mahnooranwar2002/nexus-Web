@model Nexus.Models.mainmodel
@{
     Layout = "../shared/Dashboard_layout.cshtml";
}
@if (TempData["massage"] != null)
{
    <div class="alert alert-success" role="alert">
        <h3>@TempData["massage"]</h3>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <div class="form-container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <h2 class="heading">Add New Admin</h2>
                        <div class="underline"></div>
                    </div>
                </div>
            </div>
            <form method="post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                       
                        <label for="name">Name</label>
                        <input name="admin_name" type="text" class="form-control" id="email" placeholder="Enter Name" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="email">Email</label>
                        <input name="admin_email" type="text" class="form-control" id="email" placeholder="Enter Email"  pattern="[a-z0-9._%+-]+[a-z0-9.-]+\.[a-z]{2,}$" required>
                        @if (TempData["msg"] != null)
                        {
                            <p style="color:red">@TempData["msg"] <sup>*</sup> </p>
                        }
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="jobTitle">Password</label>
                        <input name="admin_password" type="text" class="form-control" id="password" placeholder="Enter password" pattern=".{8,}" title="Must contain at least 8 or more characters" required>
                    </div>

                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-modern btn-danger">Add new admin</button>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    .heading {
        color: black;
        font-size: 3rem;
        font-weight: bold;
        text-transform: uppercase;
        /* text-shadow: 2px 2px 4px#d6111e;  */
        text-align: center;
        margin-top: 30px;
        margin-bottom: 10px;
    }

    .underline {
        height: 4px;
        background-color: #d6111e;
        width: 60%;
        margin: 0 auto;
    }</style>