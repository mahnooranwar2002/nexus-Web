@model Nexus.Models.mainmodel
@{
    Layout = Layout = "../shared/Dashboard_layout.cshtml";
}
<style>
    .heading {
        color: black;
        font-size: 3rem;
        font-weight: bold;
        text-transform: uppercase;
        /* text-shadow: 2px 2px 4px#d6111e;  */
        text-align: center;
        margin-top: 30px;
        margin-bottom: 10px;
    }

    .underline {
        height: 4px;
        background-color: #d6111e;
        width: 60%;
        margin: 0 auto;
    }</style>
<div class="container" style="height:85vh;">
    <div class="row">
        <div class="col-12 mb-4">
            <form class="form-inline" autocomplete="off">
                <div class="input-group">
                    <input type="text" name="txtsearch" class="form-control rounded-pill search-input" placeholder="Search User by Name or Email..." aria-label="Search" aria-describedby="button-addon2">
                    <button class="btn btn-outline-danger rounded-pill search-btn" type="submit" id="button-addon2">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="content">
                <div class="container">
                    <div class="container">
                        <div class="row">
                            <div class="col">
                                <h2 class="heading">User Record List</h2>
                                <div class="underline"></div>
                            </div>
                        </div>
                    </div>

                    
                    <div class="table-responsive">
                        <table id="employeeTable" class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Password</th>
                                    <th scope="col">Status</th>

                                    <th style="text-align:center">Action</th> <!-- Action column for edit/delete buttons -->
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user_data in Model.user_details)
                                {
                                    <tr>
                                        <th scope="row">@user_data.user_Name</th>
                                        <td>@user_data.user_Email</td>
                                        <td>@user_data.user_Password</td>
                                        <td>@user_data.status_updates</td>
                                        <td style="text-align:center;">
                                           
                                            <button class="btn btn-success p-2">
                                                <a href="@Url.Action("user_status","admin",new{id=user_data.user_Id})" style="color:white">Status</a>
                                            </button>

                                            <button class="btn btn-danger p-2">
                                                <a href="@Url.Action("user_delete","admin",new{id=user_data.user_Id})" style="color:white">delete</a>
                                            </button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @if (TempData["error"] != null)
                        {
                            <h4 style="color:red;text-align:center;">@TempData["error"]</h4>
                        }
                    </div>
                </div>
            </div>
            <div />
        </div>
    </div>
</div>
